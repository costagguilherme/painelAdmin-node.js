<!DOCTYPE html>
<html lang="pt-br">
    <%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h2>Usuários</h2>
        <hr>
        <a class="btn btn-success mb-4" href="/admin/users/create">Cadastrar usuário</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>E-mail</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id  %></td>
                        <td><%= user.email %></td>
                    </tr>

                <% }) %>
            </tbody>
        </table>
    </div>

</body>
    <%- include ('../../partials/footer.ejs') %>
</html>

