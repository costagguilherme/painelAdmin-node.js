<!DOCTYPE html>
<html lang="pt-br">
    
    <%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Editar artigo</h2>
            </div>
            <div class="card-body">
                <form method="post"  action="/articles/update">
                    <input type="hidden" value="<%= article.id %>" name="id">
                    <input class="form-control mb-2" name="title" value="<%= article.title %>" type="text"  placeholder="Defina o tÃ­tulo do artigo">
                    <textarea id="article" class="form-control mb-2" name="body" placeholder="Escreva o artigo"></textarea>
                    <label class="mt-3">Categoria:</label>

                    <select name="category" class="form-control">
                        <% categories.forEach((category) => { %>

                        <% if (category.id == article.categoryId) { %>
                            <option value="<%= category.id %>" selected> <%= category.title %> </option>

                        <% } else { %>

                            <option value="<%= category.id %>"> <%= category.title %> </option>

                        <% } %>

                        <% }) %>
                    </select>

                    <button class="btn btn-success mt-3">Atualizar</button>
                </form>
            </div>
        </div>
    </div>

    <div id="content" style="display: none;">
        <%- article.body %>
    </div>

</body>
    <%- include ('../../partials/footer.ejs') %>
    <script src="/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: "#article",
            plugins: [
                'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
            ],

            init_instance_callback: () => {
                tinymce.get("article").setContent($("#content").html())
            }
        })
    </script>
</html>